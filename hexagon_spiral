import matplotlib.pyplot as plt
import numpy as np

# Hexagon Spiral â€“ hexagons expanding and rotating outward
fig, ax = plt.subplots(figsize=(6,6))
theta = np.linspace(0, 2*np.pi, 7)

for i in range(1, 40):
    r = i * 0.15
    x = r * np.cos(theta + i*0.2)
    y = r * np.sin(theta + i*0.2)
    ax.plot(x, y, color=plt.cm.cool(i/40))

ax.set_aspect("equal")
ax.axis("off")
plt.show()
