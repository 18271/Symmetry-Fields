import matplotlib.pyplot as plt
import numpy as np

# Wave Interference – overlapping sine waves producing moiré-like art
x = np.linspace(-5, 5, 1200)
plt.figure(figsize=(6,6))
for k in range(1, 40):
    y = np.sin(x*k) / k
    plt.plot(x, y + k*0.05, color=plt.cm.plasma(k/40), lw=0.8)

plt.axis("off")
plt.show()
